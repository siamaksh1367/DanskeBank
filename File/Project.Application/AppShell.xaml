<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project.Application.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project.Application"
    Shell.FlyoutBehavior="Disabled"
    Title="Project.Application"
    xmlns:vm="clr-namespace:Project.Application.ViewModels"
    x:DataType="vm:AppShellViewModel">

    <ShellContent
        Title="Word Counter"
        ContentTemplate="{DataTemplate local:MainPage}" BindingContext="{Binding MainPageViewModel}"
        Route="MainPage" />

</Shell>
