<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Application.Components.WordCount"
             xmlns:vm="clr-namespace:Project.Application.ViewModels"
             x:DataType="vm:WordCountViewModel" Padding="20"
             xmlns:conv="clr-namespace:Project.Application.Converter">

    <ContentView.Resources>
        <ResourceDictionary>
            <conv:CapitalizeFirstLetterConverter x:Key="CapitalizeFirstLetterConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    
    <Border Stroke="LightGray"
            StrokeThickness="2"
            BackgroundColor="Gray"
            StrokeShape="RoundRectangle 10">
        
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <Label Text="{Binding Word, Converter={StaticResource CapitalizeFirstLetterConverter}}" Grid.Column="0" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="20" TextColor="AntiqueWhite"/>
            <Label Text="{Binding Count}" Grid.Column="1" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="20"/>
    </Grid>
    </Border>
</ContentView>
