<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Application.Components.WordsList"
             xmlns:vm="clr-namespace:Project.Application.ViewModels"
             x:DataType="vm:WordsListViewModel"
             xmlns:comp="clr-namespace:Project.Application.Components">



    <CollectionView ItemsSource="{Binding WordCountViewModels}" BackgroundColor="DarkSlateGray">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="vm:WordCountViewModel">
                <comp:WordCount BindingContext="{Binding .}"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
