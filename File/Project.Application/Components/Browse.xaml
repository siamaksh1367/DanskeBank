<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Application.Components.Browse"
             xmlns:vm="clr-namespace:Project.Application.ViewModels"
             x:DataType="vm:BrowseViewModel">
    <Grid ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Text="Browes" Command="{Binding BrowseFolderCommand}"/>
        <Entry Text="{Binding FolderPath}" Keyboard="Default" ReturnType="Done" Grid.Column="1"/>
    </Grid>
</ContentView>
